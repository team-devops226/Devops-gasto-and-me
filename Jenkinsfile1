pipeline {
    agent any
    //first stages
    stages {
            //stage 1
        stage ("Send Slack notification") {
            steps {
                slackSend message: "Build Started - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
            }
        }
            //stage 2
        stage("Get dev_msylla branch") {
            steps {
                checkout scmGit(branches: [[name: "*/dev_msylla"]], userRemoteConfigs: [[url: "https://github.com/team-devops226/Devops-gasto-and-me.git"]])
            }
        }
            //stage 3       
        stage("Build Docker Images") {
            steps {
                 dir("Devops-gasto-and-me/gastro-and-me-front") {
                    sh "docker build -t devops-gasto-and-me-angular-app:1.${env.BUILD_NUMBER} ."
                }
                //sh "docker build -t app_notes:1.${env.BUILD_NUMBER} ./app"
            }
        }
       
    }
    //Notification result
    post {
        success {
            slackSend message: "Build deployed successfully - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
        }
        failure {
            slackSend failOnError: true, message: "Build failed  - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
        }
    }
}